				"-o",
				"${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
        "kind": "build",
        "isDefault": true
      },
			"detail": "compiler: E:/Cplus/LLVM/bin/clang.exe",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
