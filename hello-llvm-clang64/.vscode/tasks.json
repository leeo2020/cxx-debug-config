{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "llvm clang++ build",
			"command": "E:/Cplus/LLVM/bin/clang++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
        "kind": "build",
        "isDefault": true
      },
			"detail": "compiler: E:/Cplus/LLVM/bin/clang++.exe",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"type": "cppbuild",
			"label": "llvm clang build",
